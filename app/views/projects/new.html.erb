<%= form_for @project do |f| %>
  <%= f.label :name, 'Project name', class:"form-control-label" %>
  <%= f.text_field :name, class:"form-control" %>
  <%= f.label :description, 'Project Description', class:"form-control-label" %>
  <%= f.text_field :description, class:"form-control", id: :project_description%>
  <%= f.select :bronze, ["BRONZE", "SCRAP"] %>
  <%= f.label :photos, 'Project Photos', class:"form-control-label" %>
  <%= f.fields_for :photos do |photo| %>
    <%= photo.file_field :url, multiple: true, name:"photos[url][]", id: :project_images %>
  <% end %>
  <%= f.submit class: "btn btn-primary btn-lg" %>
<% end %>
