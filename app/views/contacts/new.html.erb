<div class="contact-container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="contact-flex-holder upper ">
        <div class="contact-holder">
          <h3 class="index-header mt20 black">CONTACT</h3>
          <div class="contact-flex">
            <%= image_tag ("Mail.png"), class: "contact-avatar" %>
            <a class="bold-large black margin-left" style="font-family: 'Raleway'" href="mailto:jamie1wild@gmail.com">jamie1wild@gmail.com</a>
          </div>
          <div class="contact-flex">
            <%= image_tag ("Phone.png"), class: "contact-avatar" %>
            <p class="bold-large black margin-left">+44 7921 812332</p>
          </div>
          <a class="download mb-4" href="<%= asset_path('ONE_WILD.pdf') %>" download>
            Download Brochure
          </a>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="contact-flex-holder upper">
        <div class="contact-holder-lower">
          <div class="modal-header">
            <h4 style="color: black;">To find out more, please contact James</h4>
          </div>
          <div class="modal-body">
            <%= simple_form_for(@message) do |f| %>
              <%= f.input :email %>
              <%= f.input :phone %>
              <%= f.input :message %>
              <div class="dcen mt-4">
                <%= f.submit :Send, class: 'btn-primary mt-4' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

