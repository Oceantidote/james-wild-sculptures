<%= form_for @update do |f| %>
  <%= f.label :title, 'Update name', class:"form-control-label" %>
  <%= f.text_field :title, class:"form-control" %>
  <%= f.label :description, 'Update Description', class:"form-control-label" %>
  <%= f.text_field :description, class:"form-control" %>
  <%= f.label :link, 'Project link', class:"form-control-label" %>
  <%= f.text_field :link, class:"form-control" %>
  <%= f.label :url, 'Project link url', class:"form-control-label" %>
  <%= f.text_field :url, class:"form-control" %>
  <%= f.label :photos, 'Project Photos', class:"form-control-label" %>
  <%= f.file_field :photo, name:"photo" %>
  <%= f.rich_text_area :content %>
  <%= f.submit class: "btn btn-primary btn-lg" %>
<% end %>

