<div class="news-body" style="background-image: linear-gradient(180deg, rgba(216,216,216,0.44), rgba(216,216,216,0.44)), url('https://res.cloudinary.com/hoxton-digital/image/upload/c_scale,q_61,w_1387/v1548158446/giraffe.jpeg');">
  <h3 class="header-text">NEWS FROM THE WORKSHOP</h3>
  <div class="container">
    <% @updates.each do |update| %>
      <div class="news-card">
        <img src="<%= update.photo? ? cl_image_path(update.photo, :format => :webp, :quality => 10) : image_path("Logo.jpg") %>" alt="<%= update.title %>" style="width: 100%">
        <!-- <div class="news-image" style="background-image: url(<%= update.photo? ? cl_image_path(update.photo, :format => :webp, :quality => 10) : image_path("Logo.jpg") %>);"></div> -->
        <div class="pv"><h3><%= update.title %> - <%= update.created_at.strftime("%d/%m/%Y") %></h3></div>
        <div class="pv"><p><%= update.description %></p></div>
        <% if update.url != "" && update.link != "" %>
          <div>
            <a class="pv" href="<%= update.url %>"><%= update.link %></a>
          </div>
        <% end %>
        <% if current_user %>
          <div class="edit-delete-links">
            <%= link_to edit_update_path(update) do %>
              <div class="edit links-circle">
                <%= image_tag 'weld.png', class: "links-icons" %>
              </div>
            <% end %>
            <%= link_to update_path(update), method: "delete" do %>
              <div class="delete links-circle">
                <%= image_tag 'bin.png', class: "links-icons" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .news-card {
    width: 100%;
    margin-bottom: 40px;
    background-color: rgba(216,216,216,0.8);
    padding-bottom: 15px;
  }
  .news-image {
    width: 100%;
    height: 60%;
  }
  .pv {
    padding: 0px 20px;
  }
</style>
