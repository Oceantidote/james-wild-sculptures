<div class="container">
  <h1 class="tc p-3">Edit Pages</h1>
  <%= simple_form_for(@homepage) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <h3 class="mt-4">Homepage</h3>
    <h4>Top Carousel</h4>
    <div class="row">
      <div class="col-sm-12 inherit col-md-3">
        <div class="form-inputs">
          <%= f.association :project_one %>
        </div>
      </div>
      <div class="col-sm-12 inherit col-md-3">
        <div class="form-inputs">
          <%= f.association :project_two %>
        </div>
      </div>
      <div class="col-sm-12 inherit col-md-3">
        <div class="form-inputs">
          <%= f.association :project_three %>
        </div>
      </div>
      <div class="col-sm-12 inherit col-md-3">
        <div class="form-inputs">
          <%= f.association :project_four %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-inputs pl-4">
        <p>Blurb</p>
        <%= f.rich_text_area :homepage_content %>
        <p class="mt-3">Title for pictures</p>
        <%= f.input :work_title, label: false %>
      </div>
    </div>
    <hr>
    <h3 class="mt-4">Bronze</h3>
    <div class="row">
      <div class="form-inputs pl-4">
        <%= f.input :bronze_title, label: "Bronze title" %>
        <p>Blurb</p>
        <%= f.rich_text_area :bronze_content %>
      </div>
    </div>
    <hr>
    <h3 class="mt-4">Scrap</h3>
    <div class="row">
      <div class="form-inputs pl-4">
        <%= f.input :scrap_title, label: "Scrap title" %>
        <p>Blurb</p>
        <%= f.rich_text_area :scrap_content %>
      </div>
    </div>
    <div class="mb-4 mt-4 form-actions pv-mid">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
