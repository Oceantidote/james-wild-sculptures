body {
  background-color: #FFFFFF;
  font-family: 'Raleway', 'Open Sans', sans-serif;
  height: 100vh;
}

a {
  font-family: 'ButlerBold';
  font-weight: normal;
  color: $black;
  font-style: normal;
  font-size: 20px;
  &:hover {
    color: $etch;
  }
}

p {
  font-family: "Raleway";
  font-size: 20px;
  margin: 0px;
}

h2 {
  font-family: 'ButlerBold';
  font-weight: normal;
  font-style: normal;
  letter-spacing: 4px;
}

h3 {
  margin: 0px;
  font-family: 'ButlerBold';
  font-weight: normal;
  font-style: normal;
  font-size: 28px;
  letter-spacing: 3px;
}

.letch {
  color: $letch;
}
.etch {
  color: $etch;
}
.mobile-header {
  position: relative;
}
.mobile-tag {
  position: absolute;
  bottom: 15px;
  text-align: right;
  right: 20px;
  color: white;
  font-family: 'Open Sans', sans-serif;
  opacity: 0.5;
}

.player {
  width: 100vw;
  height: calc(100vw / 2.4);
  position: relative;
  font-size: 0;
  overflow: hidden;
  position: relative;
}

.player__video {
  background-color: transparent;
  width: 100%;
  position: absolute;
  top: calc(-100vw / 16);
  left: 0;
  border-bottom: 1px solid transparent;
}
.player__video-about {
  width: 100%;
  position: absolute;
  top: calc(-100vw / 13.5);
  left: 0;
}

.video-logo-holder {
  width: 100vw;
  height: calc(100vw / 2.4);
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-and-play {
  height: 25vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.logo-and-play-about {
  height: 25vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.video-logo {
  height: 150px;
  width: 150px;
  opacity: 0.7;
}

.volume-toggle {
  position: absolute;
  bottom: 5px;
  left: 5px;
}

.volume-logo {
  height: 30px;
  width: 30px;
  opacity: 0.3;
  position: absolute;
  bottom: 10px;
  left: 15px;
  &:hover {
    cursor: pointer;
    opacity: 0.7;
  }
}

.video-text {
  height: 20px;
  color: white;
  font-weight: bold;
  opacity: 0.3;
  position: absolute;
  bottom: 15px;
  right: 15px;
  &:hover {
    opacity: 0.7;
  }
}

.modal_player_video {
  height: 100vh;
  width: 100vw;
}

.modal_video {
  height: 100vh;
  width: 100vw;
}

.player_button {
  background: transparent;
  border: none;
  color: white;
  text-align: center;
  outline: 0;
  padding: 0;
  cursor: pointer;
  font-size: 50px;
  opacity: 0.3;
}

.main-text {
  display: flex;
  align-itmes: center;
  justify-content: center;
  padding-left: 5vw;
  padding-right: 5vw;
  margin-top: 8vw;
  @media only screen and (min-width: 980px) {
    margin-top: 6.5vw;
  }
  @media only screen and (min-width: 1300px) {
    margin-top: 5vw;
  }
}
.home-latest-work {
  margin: 8vw 0;
  @media only screen and (min-width: 980px) {
    margin-top: 6.5vw;
  }
  @media only screen and (min-width: 1300px) {
    margin-top: 5vw;
  }
}
.index-header {
  text-align: center;
}

.main-content {
  text-align: center;
  color: $black;
  @media only screen and (min-width: 980px) {
    max-width: calc(800px + 6.5vw);
  }
  @media only screen and (max-width: 1300px) {
    max-width: calc(800px + 5vw);
  }
}


.subheader {
  color: rgba(100,100,100,1);
  font-weight: bold;
}

.latest-work-flex {
  display: flex;
  justify-content: space-around;
}

.latest-work-card {
  background-size: cover;
  background-repeat: no-repeat;
  height: 250px;
  position: relative;
  transition: transform .5s;
  margin-bottom: 20px;
  filter: grayscale(70%);
  &:hover {
    filter: grayscale(0%);
    transition: filter 0.5s;
  }
}

.latest-work-type {
  position: absolute;
  top: 10px;
  right: 20px;
  color: #fff;
  font-size: 0;
  // transition: font-size .5s;
}

.latest-work-title {
  text-align: left;
  position: absolute;
  bottom: 10px;
  left: 20px;
  color: $letch;
  font-size: 0;
  opacity: 0;
  font-family: 'ButlerBold';
  // transition: font-size .5s;
}

.latest-work-card:hover .latest-work-type {
  font-size: 24px;
}

.latest-work-card:hover .latest-work-title {
  font-size: 24px;
  opacity: 0.7;
  transition: font-size 0.5s;
  transition: opacity 0.5s;
}

.linear-gradient-hover {
  background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0));
  // width: 300px;
  height: 250px;
  transition: background-image 5s;
}
.home-video {
  background-image: url('http://res.cloudinary.com/hoxton-digital/image/upload/w_1400/q_auto/v1548067192/qjqbb9yzfpxcdkindkna.jpeg');
  background-size: cover;
  background-position: 50% 53.5%;
}
.pb {
  padding-bottom: 15px;
}

.latest-work-card:hover .linear-gradient-hover {
  background-image: linear-gradient(rgba(0,0,0,.3), rgba(0,0,0,0.2));
}

.main-body {
  min-height: calc(100vh - 160px);
}

@media only screen and (min-width: 800px) {
  .latest-work-card {
    &:hover {
      transform: scale(1.1);
      transition: transform 0.5s;
    }
  }
}
@media only screen and (max-width: 1300px) {
  .video-logo {
    height: 100px;
    width: 100px;
  }
  p {
    font-size: 16px;
  }
  a {
    font-size: 16px;
  }
}
@media only screen and (max-width: 900px) {

  h3 {
    font-size: 23px;
  }
  .volume-logo {
    height: 15px;
    width: 15px;
    bottom: 0px;
    left: 0px;
  }
  .video-text {
    height: 10px;
    right: 10px;
    bottom: 10px;
  }
  .latest-work-card:hover .latest-work-type {
    font-size: 19px;
  }

  .latest-work-card:hover .latest-work-title {
    font-size: 19px;
  }
  .logo-and-play {
    height: 10vh;
  }
  .video-logo {
    height: 75px;
    width: 75px;
  }
  .player_button {
    font-size: 25px;
  }
  .main-body {
    min-height: calc(100vh - 140px);
  }

  .video-text {
    bottom: 7px;
  }
}

@media only screen and (max-width: 400px) {
  .video-text {
    bottom: 5px;
  }
}


@media only screen and (max-width: 600px) {

  h3 {
    font-size: 19px;
  }
  p {
    font-size: 14px;
  }
  a {
    font-size: 14px;
  }
  .logo-and-play {
    height: 5vh;
  }
  .video-logo {
    height: 50px;
    width: 50px;
  }
  .player_button {
    font-size: 15px;
  }
}


